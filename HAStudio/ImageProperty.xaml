<UserControl x:Class="HAStudio.ImageProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HAStudio"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    
        <StackPanel Orientation="Horizontal" >
            <Image x:Name="image" Height="Auto" Width="Auto" MaxHeight="50" MaxWidth="200" MouseLeftButtonDown="image_MouseLeftButtonDown" MouseLeftButtonUp="image_MouseLeftButtonUp"/>
        <Button x:Name="cmdBrowse" Content="..." Width="25" Height="25" VerticalAlignment="Top" Click="cmdBrowse_Click"/>
            <Button x:Name="cmdScreenshot" Content="..." Width="25" Height="25" VerticalAlignment="Top" Click="cmdScreenshot_Click"/>
        </StackPanel>
</UserControl>
