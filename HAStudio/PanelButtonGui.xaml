<UserControl x:Class="HAStudio.PanelButtonGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HAStudio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="Button" Margin="5">
        <Button.Background>
            <SolidColorBrush x:Name="Brush"  />
        </Button.Background>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image x:Name="Image" Grid.Row="0" Stretch="Uniform" Margin="5" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Label x:Name="Caption" Content="Button" Grid.Row="1"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
